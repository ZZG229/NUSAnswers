<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitAnswer">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="107dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:background="#F2994A"
        android:text="Answer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editTextForSubmitAns"
        android:layout_width="342dp"
        android:layout_height="252dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:background="#D7D7D7"
        android:ems="10"
        android:inputType="textMultiLine"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="152dp"
        android:background="#F2994A"
        android:text="Image"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/imageButtonForSubAns"
        android:layout_width="37dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="105dp"
        app:srcCompat="@drawable/attachment" />

    <Button
        android:id="@+id/buttonForBackInSubmitAns"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="40dp"
        android:background="#F2994A"
        android:text="Back" />

    <Button
        android:id="@+id/buttonForSaveSubmitAns"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/editTextForSubmitAns"
        android:layout_alignTop="@+id/buttonForBackInSubmitAns"
        android:background="#F2994A"
        android:text="Save" />
</RelativeLayout>